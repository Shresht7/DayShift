{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "start": {
                "type": "string",
                "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
            },
            "duration": {
                "type": "number",
                "minimum": 0,
                "maximum": 24
            },
            "selection": {
                "type": "string",
                "enum": [
                    "random",
                    "sequential"
                ]
            },
            "path": {
                "type": "string"
            }
        }
    }
}
